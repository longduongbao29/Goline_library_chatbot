# Port Configuration
CHATBOT_BACKEND_PORT=1234
CHATBOT_UI_PORT=1235
POSTGRES_DB_PORT=1236

# Container Internal Ports
BACKEND_INTERNAL_PORT=8000
UI_INTERNAL_PORT=80
POSTGRES_INTERNAL_PORT=5432

# Database Configuration
POSTGRES_DB=chatbot_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Application Configuration
ENVIRONMENT=production

# Network Configuration
NETWORK_NAME=chatbot_net

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
BACKEND_START_PERIOD=40s
UI_START_PERIOD=20s
DB_START_PERIOD=30s

# Chatbot Configuration
LLM_PROVIDER=openai  # Options: openai, groq
LLM_MODEL=gpt-4o  # Example model name, adjust as needed

# API Keys and Secrets
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here